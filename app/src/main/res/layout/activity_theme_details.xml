<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_theme_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ryomi.myenglish.gui.ThemeDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--background color will be overwritten-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/theme_details_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lblue500"
        app:titleTextColor="@color/white"
        android:elevation="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:text="@string/theme_details_no_items"
        android:visibility="gone"
        android:id="@+id/theme_details_no_items"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="50dp"
        android:clipToPadding="false"
        android:layout_below="@id/theme_details_tool_bar"
        android:id="@+id/theme_details_instanceList"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/theme_details_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/fab_add"
        app:fab_colorNormal="?attr/colorAccent"
        app:fab_colorPressed="?attr/colorAccent"
        app:fab_progress_color="?attr/colorAccent"
        app:fab_progress_indeterminate="false"
        app:fab_progress_showBackground="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>