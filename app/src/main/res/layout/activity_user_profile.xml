<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.ryomi.myenglish.gui.UserProfile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_profile_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lblue500"
        app:titleTextColor="@color/white"
        android:elevation="4dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/user_profile_bottom_navigation_view"
        style="@style/bottom_navigation_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_profile_tool_bar"
        android:layout_above="@id/user_profile_bottom_navigation_view">

        <Button
            android:id="@+id/user_profile_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_profile_logout"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

</RelativeLayout>
