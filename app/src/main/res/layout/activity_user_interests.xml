<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_user_interests"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.ryomi.myenglish.gui.UserInterests">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_interests_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lblue500"
        app:titleTextColor="@color/white"
        android:elevation="4dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/user_interests_bottom_navigation_view"
        style="@style/bottom_navigation_view"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/user_interests_bottom_navigation_view"
        android:layout_below="@id/user_interests_tool_bar"
        android:id="@+id/user_interests_list"/>

    <!--make sure this comes after the list so this is clickable -->
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/user_interests_fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/user_interests_bottom_navigation_view"
        />


</RelativeLayout>
