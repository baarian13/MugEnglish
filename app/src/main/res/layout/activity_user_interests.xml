<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_user_interests"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.ryomi.mugenglish.gui.UserInterests">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_interests_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lblue500"
        app:titleTextColor="@color/white"
        android:elevation="4dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/user_interests_bottom_navigation_view"
        style="@style/bottom_navigation_view"/>

    <!--padding & clipToPadding so fab doesn't cover up last item's delete button -->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/user_interests_bottom_navigation_view"
        android:layout_below="@id/user_interests_tool_bar"
        android:paddingBottom="60dp"
        android:clipToPadding="false"
        android:id="@+id/user_interests_list"/>

    <!--make sure this comes after the list so this is clickable -->
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/user_interests_fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:menu_colorNormal="?attr/colorPrimaryDark"
        app:menu_colorPressed="?attr/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/user_interests_bottom_navigation_view"
        >
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"
            app:fab_colorNormal="@color/facebook"
            app:fab_colorPressed="@color/facebook"
            android:id="@+id/user_interests_fab_facebook"/>
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter"
            app:fab_colorNormal="@color/twitter"
            app:fab_colorPressed="@color/twitter"
            android:id="@+id/user_interests_fab_twitter"/>
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:id="@+id/user_interests_fab_search"/>

    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
