<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_question_fill_in_blank_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linnca.pelicann.gui.Question_FillInBlank_Input">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/question_fill_in_blank_input_main_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_fill_in_blank_input_instructions"
            style="@style/questions_instructions"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/questions_question"
            android:id="@+id/question_fill_in_blank_input_question"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/question_fill_in_blank_input_hint"
            android:id="@+id/question_fill_in_blank_input_input"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            style="@style/questions_submit_button"
            android:text="@string/question_fill_in_blank_input_submit"
            android:id="@+id/question_fill_in_blank_input_submit"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
