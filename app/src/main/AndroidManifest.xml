<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ryomi.myenglish">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.ThemeList"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_theme_list"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SearchInterests"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_search_interests"/>
        </activity>
        <activity android:name=".gui.ThemeDetails"/>
        <activity android:name=".gui.UserProfile"/>
        <activity android:name=".gui.UserInterests"/>
        <activity android:name=".gui.Question_TrueFalse"/>
        <activity android:name=".gui.Question_MultipleChoice">
        </activity>
        <activity android:name=".gui.Question_Puzzle_Piece">
        </activity>
        <activity android:name=".gui.Results">
        </activity>
        <activity android:name=".gui.FacebookInterests">
        </activity>
    </application>

</manifest>