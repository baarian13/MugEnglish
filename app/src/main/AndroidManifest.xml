<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ryomi.myenglish">

    <!--so we can connect to wikiData-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--right to left support tag needed for firebase ui-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--all activities from the parent theme list activity-->
        <activity
            android:name=".gui.ThemeList"
            android:launchMode="singleTop"
            android:label="@string/theme_list_app_bar_title">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_theme_list"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity android:name=".gui.ThemeDetails"
                  android:parentActivityName=".gui.ThemeList"
                  android:label="@string/theme_details_app_bar_title"/>

        <activity android:name=".gui.Question_TrueFalse"
                  android:parentActivityName=".gui.ThemeDetails"/>
        <activity android:name=".gui.Question_MultipleChoice"
                  android:parentActivityName=".gui.ThemeDetails">
        </activity>
        <activity android:name=".gui.Question_Puzzle_Piece"
                  android:parentActivityName=".gui.ThemeDetails">
        </activity>
        <activity android:name=".gui.Results"
                  android:parentActivityName=".gui.ThemeDetails"
                  android:label="@string/results_app_bar_title">
        </activity>

        <!-- all activities from the parent activity user profile -->
        <activity android:name=".gui.UserProfile"/>

        <!-- all activities from the parent activity user interests -->
        <activity android:name=".gui.UserInterests"
                  android:launchMode="singleTop"
                  android:label="@string/user_interests_app_bar_title">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_user_interests"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.SearchInterests"
            android:parentActivityName=".gui.UserInterests"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_search_interests"/>
        </activity>
        <activity android:name=".gui.FacebookInterests"
            android:parentActivityName=".gui.UserInterests"
            android:label="@string/facebook_interests_app_bar_title">
        </activity>
        <service android:name=".userinterestcontrols.FacebookInterestFinder"
            android:exported="false"/>
    </application>

</manifest>